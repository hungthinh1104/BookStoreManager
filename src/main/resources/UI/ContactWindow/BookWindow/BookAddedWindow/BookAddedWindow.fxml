<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@BookAddedWindow.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">

   <Label text="Tên sách:" />
   <TextField fx:id="txtBookName" styleClass="input-side" />

   <Label text="Thể loại:" />
   <ComboBox fx:id="cmbGenre" prefHeight="28.0" prefWidth="116.0" styleClass="input-side">
   </ComboBox>

   <Label text="Tác giả:" />
   <TextField fx:id="txtAuthor" styleClass="input-side" />

   <HBox alignment="CENTER_LEFT" spacing="10" stylesheets="@BookAddedWindow.css">
      <VBox alignment="CENTER" prefHeight="150.0" prefWidth="68.0" spacing="15.0">
         <children>
            <Label text="Ảnh sách:" />
            <Button prefHeight="69.0" prefWidth="68.0" text="Chọn ảnh" textAlignment="CENTER" wrapText="true" />
         </children>
      </VBox>
      <ImageView fx:id="imgBook" fitHeight="149" fitWidth="100" />
   </HBox>
   <styleClass>
      <String fx:value="outside-pane" />
      <String fx:value="light-radius-box-square" />
   </styleClass>
</VBox>
