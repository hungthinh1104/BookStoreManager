<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="780.0" prefWidth="1000.0" stylesheets="@BillWindow.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">

<HBox>
    <Label text="Ngày lập:" />
    <DatePicker fx:id="datePicker" HBox.hgrow="ALWAYS" />
</HBox>

<HBox>
    <Label text="Mã khách hàng:" />
    <TextField fx:id="txtCustomerId" HBox.hgrow="ALWAYS" />
</HBox>

<HBox>
    <Label text="Chọn sách:" />
    <ComboBox fx:id="cmbBooks" HBox.hgrow="ALWAYS" />
    <TextField fx:id="txtQuantity" promptText="Số lượng" HBox.hgrow="ALWAYS" />
    <Label fx:id="lblPrice" textFill="BLUE" />
</HBox>

<HBox>
    <Label text="Tổng tiền:" />
    <Label fx:id="lblTotalPrice" textFill="BLUE" />
</HBox>

<Button text="Tạo hóa đơn" />

<TableView fx:id="tableInvoice">
    <!-- Các cột dữ liệu của bảng -->
</TableView>
</VBox>
