                <TextField fx:id="searchSDT" prefWidth="200" promptText="Số điện thoại" styleClass="default-text" />
                <Button fx:id="btnTimKiem" onAction="#btnTimKiemOnAction" text="Tìm kiếm">
                    <styleClass>
                        <String fx:value="search-button" />
                        <String fx:value="default-text" />
                    </styleClass>
                </Button>
            </HBox>
        </VBox>
    </top>

    <bottom>
        <HBox spacing="10.0">
            <Button fx:id="ThemKh" onAction="#btnThemKhOnAction" text="Thêm">
                <styleClass>
                    <String fx:value="action-button" />
                    <String fx:value="default-text" />
                </styleClass>
            </Button>
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="932.0" spacing="106.0" styleClass="light-border">
               <children>
                  <Label styleClass="table-header" text="Mã khách hàng" />
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Label styleClass="table-header" text="Tên khách hàng" />
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Label styleClass="table-header" text="Số điện thoại" />
               </children>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
               <VBox.margin>
                  <Insets right="15.0" />
               </VBox.margin></HBox>
            <ScrollPane prefHeight="552.0" prefWidth="960.0" styleClass="light-border">
               <content>
                  <VBox fx:id="CustomerContainer" maxHeight="12000.0" maxWidth="935.0" minHeight="529.0" minWidth="962.0" spacing="5.0" styleClass="background">
                     <padding>
                        <Insets top="2.0" />
