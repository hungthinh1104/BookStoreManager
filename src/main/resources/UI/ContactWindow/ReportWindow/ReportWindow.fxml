<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="780.0" prefWidth="1000.0" spacing="10.0" stylesheets="@ReportWindow.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Thống kê thu, chi theo tháng, năm" />
    <HBox prefHeight="23.0" prefWidth="979.0" spacing="10">
      <ComboBox prefWidth="150.0" promptText="Tháng" />
      <ComboBox prefWidth="150.0" promptText="Năm" />
        <Button prefHeight="20.0" text="Xem thống kê" />
    </HBox>
    <HBox prefHeight="322.0" prefWidth="960.0" spacing="10.0">
        <VBox spacing="5.0">
            <Label prefHeight="27.0" prefWidth="321.0" text="Top 5 khách hàng chi tiêu nhiều nhất" />
            <TableView fx:id="tableBestSellingBooks1" />
        </VBox>
        <VBox spacing="5.0">
            <Label text="Top 5 sách bán chạy nhất" />
            <TableView fx:id="tableBestSellingBooks">
                <!-- Các cột dữ liệu của bảng -->
            </TableView>
        </VBox>
    </HBox>

    <Label text="Doanh thu" />
    <HBox spacing="10.0">
        <BarChart prefHeight="150.0" prefWidth="883.0">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
        <TableView prefHeight="281.0" prefWidth="475.0">
            <columns>
                <TableColumn prefWidth="75.0" text="Tên sách" />
                <TableColumn prefWidth="75.0" text="Số lượng bán ra" />
                <TableColumn prefWidth="75.0" text="Thành tiền" />
            </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
        </TableView>
    </HBox>

    <Label text="Báo cáo tồn" />
    <HBox spacing="10.0">
        <BarChart prefHeight="150.0" prefWidth="883.0">
           <xAxis>
               <CategoryAxis side="BOTTOM" />
           </xAxis>
           <yAxis>
               <NumberAxis side="LEFT" />
           </yAxis>
        </BarChart>
        <TableView prefHeight="281.0" prefWidth="475.0">
           <columns>
               <TableColumn prefWidth="75.0" text="Tên sách" />
               <TableColumn prefWidth="75.0" text="Tồn đầu tháng" />
               <TableColumn prefWidth="75.0" text="Tồn cuối tháng" />
           </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
        </TableView>
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
